{
  "manifest_version": 3,
  "name": "MCP Browser Control",
  "version": "1.0.0",
  "description": "Control Chrome via MCP",
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}