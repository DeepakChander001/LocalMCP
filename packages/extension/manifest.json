{
  "manifest_version": 3,
  "name": "Browser Control Extension",
  "version": "1.0",
  "description": "Control browser via MCP",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*",
    "ws://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-disconnected.png"
  }
}